@model Dictionary<int, string>

@{
    ViewBag.Title = "Brute forcing the Caesar Cipher";
}

<h1>Brute Forcing the Caesar Cipher</h1>

@using (Html.BeginForm("BruteForce", "CaesarCipher", new { }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <input type="hidden" name="command" value="encrypt" />
    <h2>Encrypt</h2>
    <div class="form-group">
        <label for="plainText" class="control-label col-sm-2">Plain Text</label>
        <input name="plainText" class="form-control col-sm-10" placeholder="plaintext (a-z)" pattern="[a-z]+" required title="lower case letters only." value="@ViewBag.PlainText">
    </div>
    <div class="form-group">
        <label for="key" class="control-label col-sm-2">Key</label>
        <input type="number" name="key" min="1" max="26" step="1" class="form-control col-sm-10 input-small" placeholder="1-25" required value="@ViewBag.Key">
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10"><button class="btn btn-lg btn-primary" type="submit">Encrypt</button></div>
    </div>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Key</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model)
{
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
}
        </tbody>
    </table>
}
